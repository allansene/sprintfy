<%= render 'squad_manager_mailer/sprint_report_email/report_css' %>

<%= render 'squad_manager_mailer/sprint_report_email/report_title' %>

<div class="report-section">
  <div class="title">Goals</div>
  <%= render 'squad_manager_mailer/sprint_report_email/goals_report' %>
</div>

<div class="report-section">
  <div class="title">Story Points</div>

  <div>Tabela 1 - Story points entregues</div>
  <%= render 'squad_manager_mailer/sprint_report_email/story_points_table' %>

  <div class="separator"></div>

  <%= render 'squad_manager_mailer/sprint_report_email/story_points_summary' %>

  <div class="separator"></div>

  <div>Tabela 2 - Story points por dia Ãºtil</div>
  <%= render 'squad_manager_mailer/sprint_report_email/daily_story_points_table' %>
