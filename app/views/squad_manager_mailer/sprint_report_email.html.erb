<div class="report-section">
  <div class="title">Daily Meetings</div>
  <%= render 'squad_manager_mailer/sprint_report_email/daily_meeting_summary' %>

  <div class="subsection">
    <div class="title">Dias sem daily meeting</div>
    <%= render 'squad_manager_mailer/sprint_report_email/daily_meeting_not_done_items' %>
  </div>
</div>

<div class="report-section">
  <div class="title">Sprint Review</div>

  <div class="subsection">
    <div class="title">O que mudar</div>
    <%= render 'squad_manager_mailer/sprint_report_email/sprint_report_items', sprint_report: @sprint_what_to_change %>
  </div>

  <div class="subsection">
    <div class="title">O que deu certo</div>
    <%= render 'squad_manager_mailer/sprint_report_email/sprint_report_items', sprint_report: @sprint_did_right %>
  </div>

  <div class="subsection">
    <div class="title">O que deu errado</div>
    <%= render 'squad_manager_mailer/sprint_report_email/sprint_report_items', sprint_report: @sprint_did_wrong %>
  </div>
</div>
